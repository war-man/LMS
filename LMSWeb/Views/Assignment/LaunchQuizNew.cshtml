@model LMSBL.DBModels.TblQuiz
@{
    ViewBag.Title = "Launch Quiz";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    //Layout = null;
}

@using (Html.BeginForm("SubmitQuiz", "Assignment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="container-fluid mt-4 mb-4 pl-4 pr-4">
        <div class="row">
            <div class="col">
                <h4 class="mt-3 ml-2 mb-3"></h4>
            </div>
        </div>

        <div>
            @Html.HiddenFor(model => model.QuizId)
            @Html.HiddenFor(model => model.completeTime)
            @Html.HiddenFor(model => model.Duration)
            @Html.HiddenFor(model => model.hdnResponseData, new { @id = "hdnResponseData" })
            @Html.HiddenFor(model => model.hdnLaunchData, new { @id = "hdnLaunchData" })
            <div class="container-fluid user-quiz-top-section mb-2 mt-3 p-2 list-box">
                <div class="col-12">
                    <h4>Quiz</h4>
                </div>
                <div class="col-12">
                    Name: <span class="grey-color">@Model.QuizName</span>
                    @if (Model.Duration != 0)
                    {
                        <div class="float-right"><div class="blue-color" id="showtime" style="margin-bottom:10px;">@Model.Duration</div></div>
                    }
                </div>
                <div class="col-12">
                    Description: <span class="grey-color">@Model.QuizDescription</span>
                </div>
            </div>
            @*<div id="dvQuestions"></div>*@
            <div id="dvQuestions"></div>
            <div class="col mt-3">
                <div class="row">
                    <div class="col-sm-12">
                        <ul class="list-inline que-pagination" id="paginator-list">
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-right">

                        <button type="button" id="btnPrev" class="btn btn-primary prev-btn"><i class="fas fa-chevron-left"></i> Prev</button>
                        <button type="button" id="btnNext" class="btn btn-primary next-btn">Next <i class="fas fa-chevron-right"></i></button>
                        <button type="submit" id="btnResponseSubmit" class="btn btn-primary prev-btn">Submit</button>
                        <button type="button" id="btnCancel" class="btn btn-primary prev-btn">Cancel</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

<!-- include summernote css/js -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>
<script src="~/assets/Quiz.js"></script>
