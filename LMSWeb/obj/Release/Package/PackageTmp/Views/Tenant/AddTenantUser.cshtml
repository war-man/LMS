@model LMSBL.DBModels.TblUser
@{
    ViewBag.Title = "Add Admin";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

@using (Html.BeginForm("SaveTenantUser", "Tenant", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid mt-4 mb-4 pl-4 pr-4">
        <div class="row justify-content-center h-100">
            <div class="col align-self-center add-user-section ">
                <div class="col">
                  <h4 class="mt-3 ml-2 mb-3">Add Admin</h4>
                    
                </div>
                <div class="row pt-5 pl-4">
                    <div class="col-sm-6">
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.TenantId)

                        @Html.TextBoxFor(model => model.FirstName, new { @class = "input100", placeholder = "FirstName" })

                        @*@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })*@

                        @Html.TextBoxFor(model => model.LastName, new { @class = "input100", placeholder = "LastName" })
                        @*<span class="required">&#10026;</span>*@
                        @*@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })*@

                        @Html.TextBoxFor(model => model.EmailId, new { @class = "input100", placeholder = "EmailId" })
                        @*<span class="required">&#10026;</span>*@
                        @*@Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })*@

                        
                        @*<span class="required">&#10026;</span>*@
                        @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.DOB, "{0:MM/dd/yyyy}", new { @class = "input100 datepicker", @id = "dtDOB", @readonly = "readonly", @autocomplete = "off", placeholder = "DateOfBirth" })

                        @*@Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })*@

                        @Html.TextBoxFor(model => model.ContactNo, new { @class = "input100", placeholder = "ContactNo" })

                        @*@Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })*@
                        @*@Html.LabelFor(model => model.RoleName, new { @class = "col-3 p-0" })*@
                        @Html.DropDownListFor(x => Model.RoleId, new SelectList(Model.UserRoles, "RoleId", "RoleName"), htmlAttributes: new { @class = "input100", id = "TenantUserRoles" })
                        @*<span class="required">&#10026;</span>*@
                        @*@Html.ValidationMessageFor(x => Model.UserRoles[0].RoleId, "", new { @class = "text-danger" })*@
                        

                    </div>               
                </div>
                    <div class="row justify-content-end pr-4">
                        <div >
                            <button type="submit" id="btnUserSubmit" class="btn btn-primary profle-submit-btn mr-4"><b>Submit</b></button>
                            <button type="submit" onclick="location.href='@Url.Action("Index", "Tenant")';return false;"
                                    class="btn btn-outline-primary cancel-btn">
                                <b>Cancel</b>
                            </button>

                        </div>
                    </div>
                </div>
        </div>
    </div>


}
<script src="~/assets/Validations.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $('#dtDOB').datepicker({
            format: 'mm/dd/yyyy',
            showWeek: true
        });
    });
</script>

