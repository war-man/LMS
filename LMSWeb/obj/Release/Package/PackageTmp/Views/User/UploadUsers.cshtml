@model LMSBL.DBModels.TblUser
@{
    ViewBag.Title = "Upload Users";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

@using (Html.BeginForm("UploadUsers", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid mt-4 mb-4 pl-4 pr-4">
        <div class="row" style="margin-bottom:25px;margin-left:275px;">
            <div class="col">
               
                <h4 class="title-color">
                    Upload Users
                </h4>
              

            </div>
        </div>
        <div class="row justify-content-center h-100" style="margin-bottom:100px;">
            <div class="col align-self-center add-user-section list-box">
                
                <div class="row pt-5 pl-4">
                    <div class="col-sm-6">
                        @Html.HiddenFor(model => model.TenantId)

                        <div>
                            Upload Users
                        </div>

                        <input type="file" name="file" id="file" style="width: 100%;" accept=".xlsx" />
                        <div>
                            <small>(File should not exceed 20 MB)</small>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <a href="#" onclick="DownloadFile();">Download Template</a>
                    </div>
                </div>
                <div class="row justify-content-end pr-4">
                    <button type="submit" id="btnUserUpload" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Save Changes</button>
                    <button type="submit" onclick="location.href='@Url.Action("Index", "User")';return false;" class="btn btn-outline-primary cancel-btn"><i class="far fa-times-circle"></i> Cancel</button>
                </div>
                <div id="dvMessage">@Html.Raw(ViewBag.Log)</div>
            </div>
        </div>

    </div>
}
<script src="~/assets/Validations.js"></script>
<script type="text/javascript">
    function DownloadFile() {
        var fileName = "../Download/UserUploadTemplate.csv";
        window.location = fileName;
    }
</script>