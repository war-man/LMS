@model List<LMSBL.DBModels.TblTenant>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
@*<div class="main-container container">*@
  <div class="mt-5 pt-3 pl-3 pr-3 course-list-container">
      <div class="row">
          @*<div class="col-6 col-sm-6 col-md-6">
            <i class="fa fa-search" aria-hidden="true"></i> <input class="search-box" type="text" placeholder="Search">
        </div>
        <div class="form-inline form-group col-4 col-sm-4 col-md-4">
            <label class="">Company</label>
            <select class="form-control ml-5" id="exampleFormControlSelect1">
                <option>Select Company</option>
            </select>
        </div>*@
          @* <div class="form-group col-2 col-sm-2 col-md-2">*@
          <div class="col-lg-6 col-md-12 search-container test">
              <i class="fas fa-search"></i>
              <input class="search-box" type="text" id="txtSearch" placeholder="Search Client by name..." />
          </div>
          <div class="col-lg-6 col-md-12 text-right">
              <ul class="list-inline progress-list mt-2">
                  <li class="list-inline-item">
                      <a href="@Url.Action("AddTenant", "Tenant")">
                          <button type="button" class="btn btn-secondary dropdown-toggle create-learning-btn">
                              <i class="fas fa-plus-circle"></i>ADD Client
                          </button>
                      </a>
                  </li>
              </ul>
          </div>

      </div>
      <div class="row mt-3" id="dvActivityData">
          <div class="table-responsive">
              <table id="example" class="table">
                  <thead>
                      <tr>
                          <th scope="col">Sr No.</th>
                          <th scope="col">Name</th>
                          <th scope="col">Domain</th>
                          <th scope="col">Activation From</th>
                          <th scope="col">Activation To</th>
                          <th scope="col">Is Active</th>
                          <th scope="col">Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      @if (Model != null)
                      {
                          var index = 0;
                          foreach (var tenent in Model)
                          {
                              index++;
                              var UrlNew = tenent.TenantDomain + "." + Request.Url.Host;
                              <tr>
                                  <td class="add-column-padding">@index</td>
                                  <td>@tenent.TenantName</td>
                                  <td style="text-align:left;">
                                  <a  href="@UrlNew" target="_blank" class="login">@tenent.TenantDomain
                                      
                                      </a>
                                  </td>
                                  <td class="add-column-padding">@tenent.ActivationFrom.Value.ToString("dd-MMM-yyyy")</td>
                                  <td class="add-column-padding">@tenent.ActivationTo.Value.ToString("dd-MMM-yyyy")</td>
                                  @if (tenent.IsActive == true)
                                  {
                                      <td>
                                          <i class="fa fa-check" aria-hidden="true" style="color:lightgreen;"></i>
                                      </td>
                                  }
                                  else
                                  {
                                      <td>
                                          <i class="fa fa-times" aria-hidden="true" style="color:red;"></i>
                                      </td>
                                  }

                              <td>
                                  @*<button type="button" onclick="location.href='@Url.Action("EditTenant", "Tenant", new { id = tenent.TenantId })';return false;">
                                      <img src="~/assets/images/shape_editUser.png" />

                                  </button>*@
                                  <a href="@Url.Action("EditTenant", "Tenant", new { id = tenent.TenantId })" class="login" title="Edit"><img src="~/assets/images/shape_editUser.png" /></a>
                                  <button type="button" onclick="location.href='@Url.Action("AddTenantUser", "Tenant", new { id = tenent.TenantId })';return false;"
                                          class="btn btn-secondary dropdown-toggle create-learning-btn">
                                      Add Admin
                                  </button>
                              </td>
                              </tr>
                          }
                      }
                  </tbody>
              </table>
          </div>
      </div>
</div>
