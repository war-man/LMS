@model LMSWeb.ViewModel.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row col-12">

        <hr class="form-divider">
    </div>
    <form class="form-inline">
        
            @Html.HiddenFor(model => model.UserId)

            <div class="row col-12">
                @Html.LabelFor(model => model.OldPassword, new { @class = "col-3 p-0" })
                @Html.PasswordFor(model => model.OldPassword, new { @class = "col-6 ml-0 form-control" })
                <span class="required">&#10026;</span>
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })

                <hr class="form-divider">
            </div>
            <div class="row col-12">
                @Html.LabelFor(model => model.Password, new { @class = "col-3 p-0" })
                @Html.PasswordFor(model => model.Password, new { @class = "col-6 ml-0 form-control" })
                <span class="required">&#10026;</span>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                <hr class="form-divider">
            </div>
            <div class="row col-12">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-3 p-0" })
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "col-6 ml-0 form-control" })
                <span class="required">&#10026;</span>
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                <hr class="form-divider">
            </div>

            <div class="row col-12" style="margin-bottom: 34px;">
                <div class="col-8">
                    <span class="required">&#10026;</span> Fields are Mandatory
                </div>
                <div class="col-4">                   
                    <button type="submit" id="btnUserSubmit" onclick="return CheckRequired();" class="btn btn-outline-secondary"><b>Submit</b></button>
                </div>
            </div>
        
    </form>

}

<script src="~/assets/SweetAlert.js"></script>
<script type="text/javascript">
    function CheckRequired() {
        if ($("#OldPassword").val() == "") {
            //Swal.fire('Please enter Old Password');
            alert('Please enter Old Password');
            return false;
        }
        if ($("#Password").val() == "") {
            //Swal.fire("Please enter Password");
            alert("Please enter Password");
            return false;
        }
        if ($("#ConfirmPassword").val() == "") {
            //Swal.fire("Please enter Confirm Password");
            alert("Please enter Confirm Password");
            return false;
        }
        if ($("#Password").val() != $("#ConfirmPassword").val()) {
            //Swal.fire("Password not matched");
            alert("Password not matched");
            return false;
        }
        return true;
    }
</script>

