@model LMSBL.DBModels.tblCourse

@{
    ViewBag.Title = "Add Course";
    //Layout = "~/Views/_ViewStart.cshtml";
}
@using (Html.BeginForm("AddCourse", "Courses", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Add New Course</h4>
    <div class="row col-12">
        <hr class="form-divider">
    </div>
    <form class="form-inline">
        <div class="row col-12">

            @Html.HiddenFor(model => model.ContentModuleId)
            @Html.HiddenFor(model => model.ContentModuleURL)
            @Html.LabelFor(model => model.ContentModuleName, new { @class = "col-3 p-0" })
            @Html.TextBoxFor(model => model.ContentModuleName, new { @class = "col-6 ml-0 form-control" })
            <span class="required">&#10026;</span>
            <hr class="form-divider">
        </div>

        <div class="row col-12">
            @Html.LabelFor(model => model.ContentModuleDescription, new { @class = "col-3 p-0" })
            @Html.TextBoxFor(model => model.ContentModuleDescription, new { @class = "col-6 ml-0 form-control" })
            <hr class="form-divider">
        </div>
        <div class="row col-12">
            @Html.LabelFor(model => model.MasteryScore, new { @class = "col-3 p-0" })
            @Html.TextBoxFor(model => model.MasteryScore, new { @class = "col-6 ml-0 form-control" })
            <hr class="form-divider">
        </div>
        <div class="row col-12">
            @Html.LabelFor(model => model.ContentModuleType, new { @class = "col-3 p-0" })
            @Html.DropDownListFor(x => Model.ContentModuleType, new SelectList(new List<Object>{
                       new { value = "Scorm1.2" , text = "Scorm1.2"  }
                    }, "value", "text"), htmlAttributes: new { @class = "col-6 ml-0 form-control", id = "UserRoles" })
            <span class="required">&#10026;</span>

            <hr class="form-divider">
        </div>

        <div class="row col-12">
            <div class="col-3 p-0">
                Upload Course
            </div>
            <div class="form-group col-5 pl-0">
                <input type="file" name="file" id="file" style="width: 50%;" accept=".zip" />
                <div>
                    <small>(File should not exceed 20 MB)</small>
                </div>
            </div>
            <div class="col-3 p-0" id="lnkCourseFile">
                <a href="#">
                    @Model.ContentModuleURL
                </a>
            </div>
            <hr class="form-divider">
        </div>


        <div class="row col-12" style="margin-bottom: 34px;">
            <div class="col-8">

            </div>
            <div class="col-4">
                <button type="submit" onclick="location.href='@Url.Action("Index", "Courses")';return false;"
                        class="btn btn-outline-secondary">
                    <b>Cancel</b>
                </button>
                <button type="submit" id="btnCourseSubmit" class="btn btn-outline-secondary"><b>Submit</b></button>
            </div>
        </div>
    </form>
}
<script src="~/assets/Validations.js"></script>