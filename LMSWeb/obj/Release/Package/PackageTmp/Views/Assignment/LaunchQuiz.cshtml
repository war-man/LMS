@model LMSBL.DBModels.TblQuiz
@{
    ViewBag.Title = "Launch Quiz";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/CSS/lib/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" />
    <script src="~/assets/SweetAlert.js"></script>

    <!-- include summernote css/js -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>
    <script src="~/assets/Quiz.js"></script>
</head>

<body>
    @using (Html.BeginForm("SubmitQuiz", "Assignment", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {      

        <div class="main-container container">
            <div id="showtime" style="margin-bottom:10px;"></div>
            @*<h4 class="launch-label">Launch Quiz</h4>*@
            @*@Html.AntiForgeryToken()*@
            <form class="form-inline">
                @Html.HiddenFor(model => model.QuizId)
                @Html.HiddenFor(model => model.hdnResponseData, new { @id = "hdnResponseData" })
                @Html.HiddenFor(model => model.hdnLaunchData, new { @id = "hdnLaunchData" })
                @*<div class="row">
                        <label class="col-3">Quiz Name :  </label><div class="col-6 ml-0">
                            @Model.QuizName
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-3">Quiz Description :  </label>
                        <div class="col-6 ml-0">@Model.QuizDescription</div>
                    </div>*@


                <div id="dvQuestions"></div>
                <div class="row clearfix">
                    <div class="paginator col-md-6 col-xs-12">
                        <ul id="paginator-list">
                        </ul>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <button type="button" id="btnCancel" class="btn btn-secondary pull-right ml-3"><b>Cancel</b></button>
                        <button type="submit" id="btnResponseSubmit" class="btn btn-secondary pull-right ml-3"><b>Submit</b></button>
                        <button type="button" id="btnNext" class="btn btn-secondary pull-right ml-3"><b>Next</b></button>
                        <button type="button" id="btnPrev" class="btn btn-secondary pull-right ml-3"><b>Prev</b></button>

                    </div>
                </div>

                @*<div class="col-12 clearfix mt-5 p-0 text-center">
                        <button type="button" id="btnCancel" class="btn btn-outline-secondary">
                            <b>Cancel</b>
                        </button>
                        <button type="submit" id="btnResponseSubmit" class="btn btn-outline-secondary"><b>Submit</b></button>
                    </div>*@
            </form>
        </div>
    }
</body>

</html>
