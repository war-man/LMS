@model LMSBL.DBModels.tblTemplateAssign
@{
    ViewBag.Title = "Update Email Template";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

@using (Html.BeginForm("UpdateTemplate", "EmailTemplate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Message"])))
    {
        <script>
            swal.fire("Template Updated Successfully")
                .then((value) => {
                    window.location.href = "Index";
                });
        </script>

    }
    <div class="row" style="margin-bottom:25px;margin-left:275px;">
        <div class="col">
            <h4 class="title-color">Update Email Template</h4>
        </div>
    </div>
    <div class="row justify-content-center h-100">
        <div class="col align-self-center add-user-section list-box">
            <div class="row pt-5 pl-4">
                @Html.HiddenFor(Model => Model.TemplateId)

                @Html.TextBoxFor(Model => Model.EmailSubject, new { @class = "input200 d-block", placeholder = "Email Subject" })

                @Html.TextAreaFor(Model => Model.EmailBody, new { @class = "input100", id = "editarea" })



            </div>
            <div class="row justify-content-end pr-4 mt-2">
                <button type="submit" name="submit" id="btnUpdate" value="save" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Update</button>

            </div>
        </div>
    </div>
</div>
}


<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>

<script src="~/assets/Quiz.js"></script>

<script >
    $(document).ready(function () {
        $('#editarea').summernote();
    });
      
</script>